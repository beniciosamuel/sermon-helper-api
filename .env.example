# ============================================
# Docker Compose Environment Variables
# ============================================
# Copy this file to .env and update with your values
# cp .env.example .env

# ============================================
# PostgreSQL Database Configuration
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=sermon_helper

# ============================================
# Backend Configuration
# ============================================
NODE_ENV=production
PORT=3000
CORS_ORIGIN=http://localhost:5000

# Database connection (used by backend)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/sermon_helper

# Enable Prometheus metrics endpoint
ENABLE_METRICS=true

# ============================================
# Frontend Configuration
# ============================================
# API URL for frontend to connect to backend
# In Docker, use service name 'backend' instead of localhost
REACT_APP_API_URL=http://localhost:3000
REACT_APP_WS_URL=http://localhost:3000

# ============================================
# Grafana Configuration
# ============================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# ============================================
# Metabase Configuration
# ============================================
METABASE_DB_NAME=metabase

# ============================================
# Security Notes
# ============================================
# IMPORTANT: Change all default passwords in production!
# - POSTGRES_PASSWORD: Use a strong password
# - GRAFANA_ADMIN_PASSWORD: Use a strong password
# - Never commit .env file to version control
